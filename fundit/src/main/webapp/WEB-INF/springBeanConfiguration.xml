	</bean>

	<bean id="loginService" class="com.fundit.services.LoginService">
		<property name="loginDao" ref="loginDao"></property>
	</bean>

	<bean name="loginDao" class="com.fundit.dao.LoginDao">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

